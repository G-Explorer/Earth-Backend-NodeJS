{
  "name": "Earth",
  "version": "0.0.0",
  "private": true,
  "main": "server/server.prod.js",
  "author": "muwenzi",
  "description": "muwenzi.com version3",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "dev:dashboard": "better-npm-run dev:dashboard",
    "presandbox": "better-npm-run presandbox",
    "sandbox": "better-npm-run sandbox",
    "sandbox:debug": "better-npm-run sandbox:debug",
    "preprod": "better-npm-run preprod",
    "prod": "better-npm-run prod",
    "check:conflict": "scripty",
    "check:eslint": "scripty"
  },
  "betterScripts": {
    "dev": {
      "command": "node $NODE_DEBUG_OPTION babel.register.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8888
      }
    },
    "dev:dashboard": {
      "command": "nodejs-dashboard --port=8003 -- node -r nodejs-dashboard $NODE_DEBUG_OPTION babel.register.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8888
      }
    },
    "sandbox": {
      "command": "pm2 start babel.register.js --name 'earth-sanbox'",
      "env": {
        "NODE_ENV": "sandbox",
        "PORT": 8888
      }
    },
    "sandbox:debug": {
      "command": "node $NODE_DEBUG_OPTION babel.register.js",
      "env": {
        "NODE_ENV": "sandbox",
        "PORT": 8888
      }
    },
    "prod": {
      "command": "pm2 start babel.register.js --name 'earth-production'",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8888
      }
    }
  },
  "scripty": {
    "silent": true
  },
  "pre-commit": [
    "check:conflict",
    "check:eslint"
  ],
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.17.2",
    "config-lite": "^1.6.0",
    "connect-flash": "0.1.1",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-winston": "^2.4.0",
    "formidable": "^1.1.1",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "mongolass": "^3.1.5",
    "mysql": "^2.15.0",
    "nodejs-dashboard": "^0.4.3",
    "objectid-to-timestamp": "1.3.0",
    "pm2": "^2.4.6",
    "res.api": "^1.0.11",
    "scripty": "^1.7.1",
    "sequelize": "^4.24.0",
    "serve-favicon": "^2.4.1",
    "sha1": "1.1.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "node-dev": "^3.1.3",
    "pre-commit": "^1.2.2"
  }
}
