{
  "name": "Earth",
  "version": "0.0.0",
  "private": true,
  "main": "dist/server.js",
  "author": "muwenzi",
  "description": "muwenzi.com version3",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "precommit": "lint-staged",
    "postcommit": "git add .",
    "predev": "npm run build",
    "dev": "better-npm-run dev",
    "dev:dashboard": "better-npm-run dev:dashboard",
    "sandbox": "better-npm-run sandbox",
    "prod": "better-npm-run prod"
  },
  "betterScripts": {
    "dev": {
      "command": "pandora dev",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev:dashboard": {
      "command": "nodejs-dashboard --port=8003 -- node -r nodejs-dashboard dist/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "sandbox": {
      "command": "pm2 start dist/server.js --name 'earth-sanbox'",
      "env": {
        "NODE_ENV": "sandbox"
      }
    },
    "prod": {
      "command": "pm2 start dist/server.js --name 'earth-production'",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "better-npm-run": "^0.1.0",
    "config-lite": "^1.6.0",
    "formidable": "^1.1.1",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-favicon": "^2.0.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "koa.res.api": "^2.0.0",
    "lodash": "^4.17.4",
    "log4js": "^2.4.1",
    "mysql2": "^1.5.1",
    "nodejs-dashboard": "^0.4.3",
    "pandora": "^1.6.18",
    "sequelize": "^4.24.0",
    "sha1": "1.1.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/formidable": "^1.0.30",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^3.0.26",
    "@types/koa-favicon": "^2.0.19",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-static": "^4.0.0",
    "@types/lodash": "^4.14.91",
    "@types/node": "^8.5.2",
    "@types/sequelize": "^4.0.80",
    "@types/uuid": "^3.4.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "node-dev": "^3.1.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  }
}
